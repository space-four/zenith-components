---
export interface Props {
    pack?: string,
    name: string,
    size?: string,
    className?: string
}

const {pack="regular", name="code", size="3x", className} = Astro.props as Props;
---

<i 
    class:list={[
        `fa-${pack}`,
        `fa-${name}`,
        `fa-${size}x`,
        className]}
></i>